@if (IsVisible)
{
    <div class="modal show d-block animate-fade-in" style="background-color: #C1BCAC">
        <div class="modal-dialog modal-lg modal-dialog-scrollable animate-zoom-in"> <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title title-text">@CategoryName</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>
                
                <div class="modal-body">
                    @{ var activeProducts = Products.Where(p => p.IsActive == true); }
                    @if (activeProducts.Any())
                    {
                        <div class="row g-3">
                            @foreach (var p in Products)
                            {
                                <div class="col-md-6">
                                    <ProductCard Product="p" OnSelected="() => HandleBook(p)" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center sub-title-text text-muted">Inga produkter tillgängliga just nu.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public List<ResponseProductDTO> Products { get; set; } = new();
    [Parameter] public string CategoryName { get; set; } = string.Empty;
    [Parameter] public bool IsVisible { get; set; }

    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<ResponseProductDTO> OnProductSelected { get; set; }

    private async Task HandleBook(ResponseProductDTO product)
    {
        await OnProductSelected.InvokeAsync(product);
    }
}