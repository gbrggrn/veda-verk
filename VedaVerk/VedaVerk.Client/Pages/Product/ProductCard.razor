<div class="card h-100 shadow-sm border-0">
    <div class="card-header bg-white border-0 pt-3">
        <h5 class="card-title fw-bold text-primary mb-0">@Product.Name</h5>
    </div>

    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Product.ImageUrl))
        {
            <img src="@Product.ImageUrl" class="img-fluid rounded mb-3 w-100"
                 style="height: 150px; object-fit: cover;" alt="@Product.Name" />
        }
        <p class="small text-muted">@Product.Description</p>
        <h4 class="text-dark">@Product.Price :-</h4>
    </div>

    <div class="card-footer bg-white border-0 pb-3">
        <button class="btn btn-primary w-100" @onclick="HandleClick">
            Boka
        </button>
    </div>
</div>

@code {
    [Parameter] public ResponseProductDTO Product { get; set; } = new();

    [Parameter] public EventCallback<ResponseProductDTO> OnSelected { get; set; }

    private async Task HandleClick()
    {
        await OnSelected.InvokeAsync(Product);
    }
}