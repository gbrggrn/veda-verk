<div class="product-card rounded shadow-sm">
    <div class="card-header border-0 pt-3" style="background-color: #C1BCAC">
        <h5 class="card-title card-text fw-bold mb-0">@Product.Name</h5>
    </div>

    <div class="card-body" style="background-color: #C1BCAC">
        @if (!string.IsNullOrWhiteSpace(Product.ImageUrl))
        {
            <img src="@Product.ImageUrl" class="img-fluid rounded mb-3 w-100"
                 style="height: 150px; object-fit: cover;" alt="@Product.Name" />
        }
        <p class="small text-muted sub-title-text">@Product.Description</p>
        <h4 class="card-text">@Product.Price :-</h4>
    </div>

    <div class="card-footer border-0 pb-3" style="background-color: #C1BCAC">
        <button class="btn btn-veda-verk w-100" @onclick="HandleClick">
            Boka
        </button>
    </div>
</div>

@code {
    [Parameter] public ResponseProductDTO Product { get; set; } = new();

    [Parameter] public EventCallback<ResponseProductDTO> OnSelected { get; set; }

    private async Task HandleClick()
    {
        await OnSelected.InvokeAsync(Product);
    }
}