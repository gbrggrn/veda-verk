@inject IBookingService BookingService

@if (Product != null)
{
    <div class="modal show d-block animate-fade-in" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl animate-zoom-in">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">Bokning</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>

                <div class="modal-body pt-0">
                    <EditForm Model="bookingModel" OnValidSubmit="HandleBooking">
                        <DataAnnotationsValidator />

                        <div class="row g-4">

                            <div class="col-md-5 col-lg-4">
                                <div class="card bg-light border-0 h-100">
                                    @if (!string.IsNullOrEmpty(Product.ImageUrl))
                                    {
                                        <img src="@Product.ImageUrl" class="card-img-top" style="height: 150px; object-fit: cover;" alt="@Product.Name">
                                    }
                                    <div class="card-body">
                                        <h4 class="card-title text-primary mb-3">@Product.Name</h4>
                                        <p class="card-text text-muted small">@Product.Description</p>

                                        <hr class="my-3" />

                                        <div class="mb-3">
                                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Valt Datum</small>
                                            <div class="fs-5">@bookingModel.BookingDate?.ToString("yyyy-MM-dd" ?? "-")</div>
                                        </div>

                                        <div class="mb-3">
                                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Vald Tid</small>
                                            <div class="fs-5 fw-bold @(bookingModel.BookingTime.HasValue ? "text-success" : "text-muted fst-italic")">
                                                @(bookingModel.BookingTime.HasValue? bookingModel.BookingTime.Value.ToString("HH:mm") : "-")
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                            <span class="fw-bold">Pris totalt:</span>
                                            <span class="fs-4 fw-bold">@Product.Price kr</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-7 col-lg-8">
                                <div class="p-2">
                                    <label class="form-label small text-muted fw-bold text-uppercase mb-3">Välj Datum</label>

                                    <div class="d-flex gap-2 overflow-auto pb-2" style="white-space: nowrap;">

                                        @foreach (var date in GetDateRange())
                                        {
                                            <button type="button"
                                                    class="btn @GetDateClass(date) border rounded-3 px-3 py-2 d-flex flex-column align-items-center"
                                                    @onclick="() => SelectDate(date)"
                                                    style="min-width: 70px;">

                                                <small class="text-uppercase" style="font-size: 0.7rem;">
                                                    @date.ToString("ddd", new System.Globalization.CultureInfo("sv-SE"))
                                                </small>

                                                <span class="fs-5 fw-bold lh-1">@date.Day</span>

                                                <small style="font-size: 0.65rem;">
                                                    @date.ToString("MMM", new System.Globalization.CultureInfo("sv-SE"))
                                                </small>
                                            </button>
                                        }
                                    </div>

                                    <div class="mb-4">
                                        @if (availableSlots == null)
                                        {
                                            <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
                                            <span class="ms-2">Laddar tider...</span>
                                        }
                                        else if (!availableSlots.Any())
                                        {
                                            <div class="alert alert-warning py-2">Inga tider tillgängliga detta datum.</div>
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var slot in availableSlots)
                                                {
                                                    <button type="button"
                                                            class="btn @GetButtonClass(slot) d-flex flex-column align-items-center py-2 px-3"
                                                            style="min-width: 80px;"
                                                            disabled="@(!slot.IsAvailable)"
                                                            @onclick="() => SelectSlot(slot)">

                                                        <span class="fw-bold">@slot.Time.ToString(@"hh\:mm")</span>
                                                        <small style="font-size: 0.7rem;">
                                                            @(slot.RemainingCapacity) kvar
                                                        </small>
                                                    </button>
                                                }
                                            </div>
                                        }
                                        <ValidationMessage For="@(() => bookingModel.BookingTime)" />
                                    </div>

                                    <h6 class="mb-3 fw-bold border-top pt-3">2. Dina Uppgifter</h6>

                                    <div class="row g-2 mb-3">
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted">Namn</label>
                                            <InputText @bind-Value="bookingModel.CustomerName" class="form-control" placeholder="Förnamn Efternamn" />
                                            <ValidationMessage For="@(() => bookingModel.CustomerName)" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted">Email</label>
                                            <InputText @bind-Value="bookingModel.CustomerEmail" class="form-control" placeholder="namn@exempel.se" />
                                            <ValidationMessage For="@(() => bookingModel.CustomerEmail)" />
                                        </div>
                                    </div>

                                    <div class="row g-2 mb-3">
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted">Antal</label>
                                            <InputNumber @bind-Value="bookingModel.Quantity" class="form-control" min="1" max="@bookingModel.Quantity" />
                                            <ValidationMessage For="@(() => bookingModel.Quantity)" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small text-muted">Mobiltelefon</label>
                                            <InputText @bind-Value="bookingModel.CustomerPhone" class="form-control" placeholder="0707770077" />
                                            <ValidationMessage For="@(() => bookingModel.CustomerPhone)" />
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-success btn-lg py-3 shadow-sm" disabled="@(bookingModel.BookingTime == null)">
                                            Bekräfta Bokning
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public ResponseProductDTO? Product { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    private CreateBookingDTO bookingModel = new();
    private TimeSpan? SelectedTime { get; set; }
    List<TimeSlotDTO>? availableSlots;
    private DateTime selectedDate = DateTime.Today;

    protected override async Task OnParametersSetAsync()
    {
        if (Product != null)
        {
            if (bookingModel.ProductId != Product.Id)
            {
                bookingModel = new CreateBookingDTO
                    {
                        ProductId = Product.Id,
                        Quantity = 1,
                        BookingDate = selectedDate
                    };
            }

            SelectedTime = null;
            availableSlots = null;
        }
        await LoadSlots();
    }

    private async Task LoadSlots()
    {
        if (Product == null)
            return;

        availableSlots = await BookingService.GetAvailableSlotsAsync(Product.Id, selectedDate);
    }

    private void SelectDate(DateTime date)
    {
        selectedDate = date;
        bookingModel.BookingDate = date;

        SelectedTime = null;
        bookingModel.BookingTime = default;

        _ = LoadSlots();
    }

    private IEnumerable<DateTime> GetDateRange()
    {
        if (Product == null)
            yield break;

        var start = Product.ActiveFrom > DateTime.Today
            ? Product.ActiveFrom // Start from product start date
            : DateTime.Today; // Start from today

        var end = Product.ActiveTo;

        var effectiveEnd = end > start.AddDays(30) ? start.AddDays(30) : Product.ActiveTo;

        for (var date = start; date <= effectiveEnd; date = date.AddDays(1))
        {
            yield return date;
        }
    }

    private string GetDateClass(DateTime date)
    {
        if (date.Date == selectedDate.Date)
        {
            // When btn is selected
            return "btn-primary text-white shadow";
        }

        // When btn is not selected
        return "btn-outline-secondary border-opacity-25 bg-white text-dark";
    }

    private void SelectSlot(TimeSlotDTO slot)
    {
        if (!slot.IsAvailable)
            return;

        SelectedTime = slot.Time;
        bookingModel.BookingTime = selectedDate.Date.Add(slot.Time);
    }

    private async Task HandleBooking()
    {
        await BookingService.Create(bookingModel);

        await OnClose.InvokeAsync();
    }

    private string GetButtonClass(TimeSlotDTO slot)
    {
        if (!slot.IsAvailable) return "btn-secondary opacity-50";
        if (SelectedTime == slot.Time) return "btn-primary";
        return "btn-outline-primary";
    }
}